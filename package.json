{
    "name": "hangouts-chat",
    "version": "1.0.1",
    "description": "Unofficial desktop client for Google Hangouts Chat",
    "main": "lib/main.js",
    "build": {
        "appId": "me.endaphelan.${name}",
        "mac": {
            "category": "public.app-category.communication"
        },
        "nsis": {
            "createDesktopShortcut": "always"
        },
        "dmg": {
            "contents": [
                {
                    "x": 110,
                    "y": 150
                },
                {
                    "x": 240,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "linux": {
            "category": "Communication"
        }
    },
    "linux": {
        "target": [
            "AppImage",
            "snap",
            "deb",
            "rpm"
        ],
        "icon": "icon.png",
        "category": "Communication"
    },
    "devDependencies": {
        "electron": "3.0.7",
        "electron-builder": "^20.31.2",
        "electron-installer-redhat": "^0.5.0",
        "rimraf": "^2.6.2",
        "typescript": "^3.2.1"
    },
    "scripts": {
        "start": "yarn install && yarn compile && electron .",
        "build": "electron-packager . hangouts-chat --platform linux --arch x64 --out dist/",
        "rpm64": "electron-installer-redhat --src dist/hangouts-chat-linux-x64/ --arch x86_64 --config config.json",
        "postinstall": "electron-builder install-app-deps",
        "compile": "rimraf app/out && tsc",
        "pack": "yarn compile && electron-builder --dir",
        "dist": "yarn compile && electron-builder",
        "release": "yarn compile && electron-builder"
    },
    "keywords": [
        "desktop",
        "electron",
        "google",
        "hangouts"
    ],
    "author": "Enda Phelan",
    "license": "MIT"
}
